@page "{id}"
@model EditModel
@{
    ViewData["Title"] = "Editar Dueño";
}
<div class="container mt-4 mb-5">
  <h2 class="mb-3">Editar Dueño</h2>

  @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""]?.Errors.Any() == true)
  {
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <h6 class="alert-heading mb-2"><i class="fas fa-exclamation-triangle"></i> Errores generales:</h6>
      <ul class="mb-0 small">
        @foreach (var error in ViewData.ModelState[""].Errors)
        {
          <li>@error.ErrorMessage</li>
        }
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  }

  <form method="post" class="card card-body shadow-sm" id="ownerForm" novalidate>
    <input type="hidden" asp-for="Owner.Id" />
    
    <div class="row g-3">
      <div class="col-md-6">
        <label asp-for="Owner.Name" class="form-label">Nombre *</label>
        <input asp-for="Owner.Name" class="form-control" required minlength="3" maxlength="100" />
        <span asp-validation-for="Owner.Name" class="text-danger small"></span>
        <div class="invalid-feedback">El nombre debe tener al menos 3 caracteres.</div>
      </div>

      <div class="col-md-6">
        <label asp-for="Owner.FirstLastname" class="form-label">Apellido Paterno *</label>
        <input asp-for="Owner.FirstLastname" class="form-control" required minlength="2" maxlength="100" />
        <span asp-validation-for="Owner.FirstLastname" class="text-danger small"></span>
        <div class="invalid-feedback">El apellido paterno debe tener al menos 2 caracteres.</div>
      </div>

      <div class="col-md-6">
        <label asp-for="Owner.SecondLastname" class="form-label">Apellido Materno</label>
        <input asp-for="Owner.SecondLastname" class="form-control" minlength="2" maxlength="100" />
        <span asp-validation-for="Owner.SecondLastname" class="text-danger small"></span>
      </div>

      <div class="col-md-6">
        <label asp-for="Owner.PhoneNumber" class="form-label">Teléfono *</label>
        <input asp-for="Owner.PhoneNumber" class="form-control" type="tel" pattern="[0-9]{8}" required />
        <span asp-validation-for="Owner.PhoneNumber" class="text-danger small"></span>
        <div class="invalid-feedback">El teléfono debe tener exactamente 8 dígitos.</div>
      </div>

      <div class="col-md-6">
        <label asp-for="Owner.Email" class="form-label">Correo Electrónico *</label>
        <input asp-for="Owner.Email" class="form-control" type="email" required maxlength="255" />
        <span asp-validation-for="Owner.Email" class="text-danger small"></span>
        <div class="invalid-feedback">Ingrese un correo electrónico válido.</div>
      </div>

      <div class="col-md-6">
        <label asp-for="Owner.Ci" class="form-label">Carnet de Identidad *</label>
        <input asp-for="Owner.Ci" class="form-control" type="text" minlength="6" maxlength="9" pattern="[0-9]{6,9}" required />
        <span asp-validation-for="Owner.Ci" class="text-danger small"></span>
        <div class="invalid-feedback">El CI debe contener entre 6 y 9 dígitos.</div>
      </div>

      <div class="col-12">
        <label asp-for="Owner.Address" class="form-label">Dirección *</label>
        <textarea asp-for="Owner.Address" class="form-control" rows="2" required minlength="5" maxlength="100"></textarea>
        <span asp-validation-for="Owner.Address" class="text-danger small"></span>
        <div class="invalid-feedback">La dirección debe tener al menos 5 caracteres.</div>
      </div>
    </div>

    <div class="mt-4">
        <button type="button" class="btn btn-dark" id="btnOpenEditModal">
                <i class="fas fa-save"></i> Actualizar
        </button>
        <a asp-page="/Owners/OwnerPage" class="btn btn-outline-secondary"><i class="fas fa-times"></i> Cancelar</a>
    </div>
  </form>
    @await Html.PartialAsync("_ConfirmEditModal")
</div>

@section Scripts {
  <script>
        $(document).ready(function() {
            var form = document.getElementById('ownerForm');

            $('input[type="tel"], input[asp-for="Ci"]').on('keypress', function(e) {
                if (e.which < 48 || e.which > 57) e.preventDefault();
            });

            $('input[type="tel"]').on('input', function() {
                if (this.value.length > 8) this.value = this.value.slice(0, 8);
            });

            $('input[asp-for="Ci"]').on('input', function() {
                if (this.value.length > 9) this.value = this.value.slice(0, 9);
            });

            $('#btnOpenEditModal').on('click', function() {
                if (form.checkValidity()) {
                    var modal = new bootstrap.Modal(document.getElementById('confirmEditModal'));
                    modal.show();
                } else {
                    form.classList.add('was-validated');
                }
            });

            $('#confirmEditBtn').on('click', function() {
                const confirmBtn = $(this);
                confirmBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Guardando...');
                var modal = bootstrap.Modal.getInstance(document.getElementById('confirmEditModal'));
                modal.hide();
                form.submit();
            });
        });
  </script>
}