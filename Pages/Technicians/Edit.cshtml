@page "{id:int}"
@model FuerzaG.Pages.Technicians.EditModel
@{
    ViewData["Title"] = "Edit Technician";
}

<h2>Edit Technician</h2>
<hr />

<form method="post">
    <input type="hidden" asp-for="Form.Id" />
    <partial name="_TechnicianFields" for="Form" />
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="/TechnicianPage" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
