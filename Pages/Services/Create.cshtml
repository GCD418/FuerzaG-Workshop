@page
@model FuerzaG.Pages.Services.CreateModel
@{
    ViewData["Title"] = "Nuevo Servicio";
}

<h2 class="mb-3">Nuevo Servicio</h2>

@if (Model.ValidationErrors.Any())
{
  <div class="alert alert-danger" role="alert">
      <h5 class="alert-heading">Errores de validación:</h5>
      <ul class="mb-0">
          @foreach (var error in Model.ValidationErrors)
          {
              <li>@error</li>
          }
      </ul>
  </div>
}

<form method="post" class="card card-body shadow-sm" novalidate>
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Service.Name" class="form-label">Nombre del servicio</label>
            <input asp-for="Service.Name" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="Service.Type" class="form-label">Tipo</label>
            <select asp-for="Service.Type" class="form-select">
                <option value="">-- Selecciona el tipo --</option>
                <option value="Preventivo">Preventivo</option>
                <option value="Correctivo">Correctivo</option>
            </select>
        </div>

        <div class="col-md-6">
            <label asp-for="Service.Price" class="form-label">Precio</label>
            <input asp-for="Service.Price" class="form-control" />
        </div>

        <div class="col-12">
            <label asp-for="Service.Description" class="form-label">Descripción</label>
            <textarea asp-for="Service.Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="mt-4">
            <button class="btn btn-dark" type="submit"><i class="fas fa-save"></i> Guardar</button>
            <a asp-page="/Services/ServicePage" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </div>

        <div class="mt-3">
            <small class="text-muted">* Campos obligatorios</small>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
          const $price = $('input[asp-for="service.Price"]');
          $price.on('input', function () {
            if (this.value < 0) this.value = 0;
          });
        });
    </script>
}
