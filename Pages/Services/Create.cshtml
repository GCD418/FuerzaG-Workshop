@page
@model FuerzaG.Pages.Services.CreateModel
<h2>Nuevo Servicio</h2>

<form method="post" class="card card-body">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="service.Name" class="form-label"></label>
            <input asp-for="service.Name" class="form-control"/>
            <span asp-validation-for="service.Name" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="service.Type" class="form-label">Tipo</label> 
            <select asp-for="service.Type" class="form-select"> 
            <option value="">-- Selecciona el tipo --</option> 
            <option value="Preventivo">Preventivo</option> 
            <option value="Correctivo">Correctivo</option> 
            </select> 
            @* <span asp-validation-for="Type" class="text-danger"></span> *@
        </div>

        <div class="col-md-6">
            <label asp-for="service.Price" class="form-label"></label>
            <input asp-for="service.Price" class="form-control"/>
            <span asp-validation-for="service.Price" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="service.Description" class="form-label"></label>
            <textarea asp-for="service.Description" class="form-control"></textarea>
            <span asp-validation-for="service.Description" class="text-danger"></span>
        </div>

       
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Guardar</button>
        <a asp-page="/Services/ServicePage" class="btn btn-outline-secondary">Cancelar</a>
    </div>
</form>
