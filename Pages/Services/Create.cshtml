@page
@model FuerzaG.Pages.Services.CreateModel
<h2>Nuevo Servicio</h2>

<form method="post" class="card card-body">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Form.Name" class="form-label"></label>
            <input asp-for="Form.Name" class="form-control" />
            <span asp-validation-for="Form.Name" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Form.Type" class="form-label"></label>
            <input asp-for="Form.Type" class="form-control" />
            <span asp-validation-for="Form.Type" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Form.Price" class="form-label"></label>
            <input asp-for="Form.Price" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Form.Price" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="Form.Description" class="form-label"></label>
            <textarea asp-for="Form.Description" class="form-control"></textarea>
            <span asp-validation-for="Form.Description" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Guardar</button>
        <a asp-page="/ServicePage" class="btn btn-outline-secondary">Cancelar</a>
    </div>
</form>
