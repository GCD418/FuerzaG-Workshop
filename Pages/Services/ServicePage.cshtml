@page
@model FuerzaG.Pages.Services.ServicePage
@{
    ViewData["Title"] = "Servicios";
}
<section class="section bg-light">
  <div class="container">
    <div class="section-header text-center mb-5">
      <h2 class="fw-bold">Listado de Servicios</h2>
      <p class="text-muted">Gestiona los servicios del taller</p>
    </div>

    <div class="d-flex justify-content-end mb-4">
      <a asp-page="/Services/Create" class="btn btn-custom">
        <i class="fas fa-plus-circle me-2"></i> Nuevo Servicio
      </a>
    </div>

    <div class="table-responsive shadow-sm rounded-3">
      <table class="table align-middle text-center">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Precio</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
        @{
            var i = 1; // contador para la columna #
        }
        @foreach (var s in Model.Services)
        {
          <tr>
            <td>@i</td>
            <td>@s.Name</td>
            <td>@s.Type</td>
            <td>@s.Price.ToString("0.00")</td>
            <td class="text-nowrap">
              <a asp-page="/Services/Edit" asp-route-id="@s.Id"
                 class="btn btn-warning btn-sm me-1">
                 <i class="fas fa-edit"></i> Editar
              </a>
              <form method="post" asp-page-handler="Delete" asp-route-id="@s.Id" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm">
                  <i class="fas fa-trash-alt"></i> Eliminar
                </button>
              </form>
            </td>
          </tr>
          i++;
        }
        </tbody>
      </table>
    </div>
  </div>
</section>
