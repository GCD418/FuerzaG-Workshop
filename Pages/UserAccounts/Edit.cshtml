@page "{id:int}"
@model FuerzaG.Pages.UsersAccounts.EditModel
<h2>Editar Cuenta</h2>

@if (Model.ValidationErrors.Any())
{
    <div class="alert alert-danger" role="alert">
        <h5 class="alert-heading">Errores de validación:</h5>
        <ul class="mb-0">
            @foreach (var error in Model.ValidationErrors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

@if (Model.UserAccount == null)
{
    <div class="alert alert-danger">Cuenta no encontrada.</div>
}
else
{
    <form method="post" class="card card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="UserAccount.Name" class="form-label"></label>
                <input asp-for="UserAccount.Name" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="UserAccount.FirstLastName" class="form-label"></label>
                <input asp-for="UserAccount.FirstLastName" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="UserAccount.SecondLastName" class="form-label"></label>
                <input asp-for="UserAccount.SecondLastName" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="UserAccount.PhoneNumber" class="form-label"></label>
                <input asp-for="UserAccount.PhoneNumber" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="UserAccount.Email" class="form-label"></label>
                <input asp-for="UserAccount.Email" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="UserAccount.DocumentNumber" class="form-label">Número de documento</label>
                <input asp-for="UserAccount.DocumentNumber" class="form-control" maxlength="14" />
            </div>
            <div class="col-md-6">
                <label asp-for="UserAccount.Role" class="form-label"></label>
                <select asp-for="UserAccount.Role" class="form-select">
                    <option value="">Seleccione un rol</option>
                    <option value="Administrador" selected="@((Model.UserAccount.Role == "Administrador") ? "selected" : null)">Administrador</option>
                    <option value="Propietario" selected="@((Model.UserAccount.Role == "Propietario") ? "selected" : null)">Propietario</option>
                </select>
            </div>
        </div>

        <div class="mt-3">
            <button class="btn btn-primary" type="submit">Guardar cambios</button>
            <a asp-page="/Accounts/AccountPage" class="btn btn-outline-secondary">Cancelar</a>
        </div>
    </form>
}
