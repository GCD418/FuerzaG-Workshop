@page
@model AccountPageModel
@{
    ViewData["Title"] = "Cuentas de Usuario";
}

<section id="accounts" class="section bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="fw-bold">Listado de Cuentas</h2>
            <p class="text-muted">Gestiona las cuentas de usuarios del sistema</p>
        </div>

        <div class="d-flex justify-content-end mb-4">
            <a asp-page="/Accounts/Create" class="btn btn-custom">
                <i class="fas fa-plus-circle me-2"></i> Nueva Cuenta
            </a>
        </div>

        <div class="table-responsive shadow-sm rounded-3">
            <table class="table align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th style="width:10%;">#</th>
                        <th style="width:30%;">Usuario</th>
                        <th style="width:20%;">Correo</th>
                        <th style="width:40%;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.Accounts.OrderBy(x => x.FirstLastName + " " + x.SecondLastName + " " + x.Name).Select((item, index) => new { item, index = index + 1 }))
                    {
                        <tr>
                            <td class="text-center"><strong>@t.index</strong></td>
                            <td>@t.item.UserName</td>
                            <td class="text-center">@t.item.Email</td>
                            <td class="text-nowrap text-center">
                                <a asp-page="/UserAccounts/Edit" asp-route-id="@Model.EncryptId(t.item.Id)" class="btn btn-warning btn-sm me-1">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <button type="button" class="btn btn-sm btn-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal@(t.item.Id)"
                                        data-account-name="@t.item.UserName">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <td colspan="6" class="text-end" style="font-weight: 400 !important; text-align: right !important;">
                            <strong>@Model.Accounts.Count()</strong> registro(s) encontrado(s)
                        </td>
                    </tr>
                </tfoot>
            </table>

            @foreach (var t in Model.Accounts)
            {
                <div class="modal fade" id="deleteModal@(t.Id)" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel@(t.Id)" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content border-0 shadow">
                            <div class="modal-header bg-dark text-white border-0">
                                <h5 class="modal-title text-light" id="deleteModalLabel@(t.Id)">
                                    <i class="fas fa-exclamation-triangle me-2"></i>  Confirmar eliminación
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p class="mb-3">
                                    ¿Está seguro de que desea eliminar la cuenta <strong>@t.UserName</strong>?
                                </p>
                                <p class="text-muted small">
                                    <i class="fas fa-info-circle me-4"></i> Esta acción no se puede deshacer.
                                </p>
                            </div>
                            <div class="modal-footer border-0">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    <i class="fas fa-times me-2"></i> Cancelar
                                </button>
                                <form method="post"
                                      asp-page-handler="Delete"
                                      asp-route-id="@Model.EncryptId(t.Id)"
                                      style="display: inline;">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash me-2"></i> Eliminar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
