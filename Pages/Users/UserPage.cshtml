@page
@model FuerzaG.Pages.Users.UserPageModel

@{
    ViewData["Title"] = "Usuarios";
}
<section id="users" class="section bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="fw-bold">Listado de Usuarios</h2>
            <p class="text-muted">Gestiona los registros de los usuarios del sistema</p>
        </div>

        <div class="d-flex justify-content-end mb-4">
            <a asp-page="/Users/Create" class="btn btn-custom">
                <i class="fas fa-plus-circle me-2"></i> Nuevo Usuario
            </a>
        </div>

        <div class="table-responsive shadow-sm rounded-3">
            <table class="table align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th style="width:5%;">#</th>
                        <th style="width:25%;">Nombre Completo</th>
                        <th style="width:20%;">Usuario</th>
                        <th style="width:20%;">Rol</th>
                        <th style="width:30%;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model.Users.OrderBy(x => x.FirstLastName + " " + x.SecondLastName + " " + x.Name)
                                        .Select((item, index) => new { item, index = index + 1 }))
                    {
                        <tr>
                            <td class="text-center"><strong>@u.index</strong></td>
                            <td>@u.item.FirstLastName @u.item.Name @u.item.SecondLastName</td>
                            <td class="text-center">@u.item.UserName</td>
                            <td class="text-center">@u.item.Role</td>
                            <td class="text-nowrap text-center">
                                <a asp-page="/Users/Edit" asp-route-id="@u.item.Id" class="btn btn-warning btn-sm me-1">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <button type="button" class="btn btn-sm btn-danger"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal@(u.item.Id)">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <td colspan="5" class="text-end">
                            <strong>@Model.Users.Count()</strong> registro(s) encontrado(s)
                        </td>
                    </tr>
                </tfoot>
            </table>

            @foreach (var u in Model.Users)
            {
                <div class="modal fade" id="deleteModal@(u.Id)" tabindex="-1" aria-labelledby="deleteModalLabel@(u.Id)" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content border-0 shadow">
                            <div class="modal-header bg-dark text-white border-0">
                                <h5 class="modal-title" id="deleteModalLabel@(u.Id)">
                                    <i class="fas fa-exclamation-triangle me-2"></i> Confirmar eliminación
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <div class="modal-body">
                                <p class="mb-3">
                                    ¿Está seguro de que desea eliminar al usuario <strong>@u.UserName</strong>?
                                </p>
                                <p class="text-muted small">
                                    <i class="fas fa-info-circle me-2"></i> Esta acción no se puede deshacer.
                                </p>
                            </div>
                            <div class="modal-footer border-0">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    <i class="fas fa-times me-2"></i> Cancelar
                                </button>
                                <form method="post"
                                      asp-page-handler="Delete"
                                      asp-route-id="@u.Id"
                                      style="display: inline;">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-trash me-2"></i> Eliminar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
