@page
@model FuerzaG.Pages.ServicePage

@{
    ViewData["Title"] = "Servicios";
}

<section id="services" class="section bg-light">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="fw-bold">Listado de Servicios</h2>
            <p class="text-muted">Gestiona los registros de los servicios del sistema</p>
        </div>

        <div class="d-flex justify-content-end mb-4">
            <a asp-page="./Create" class="btn btn-custom">
                <i class="fas fa-plus-circle me-2"></i> Nuevo Servicio
            </a>
        </div>

        <div class="table-responsive shadow-sm rounded-3">
            <table class="table align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Tipo</th>
                        <th>Precio</th>
                        <th>Descripción</th>
                        <th>Activo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model.Services)
                    {
                    <tr>
                        <td>@service.Id</td>
                        <td>@service.Name</td>
                        <td>@service.Type</td>
                        <td>@service.Price.ToString("F2")</td>
                        <td>@service.Description</td>
                        <td>@(service.IsActive ? "Sí" : "No")</td>
                        <td class="text-nowrap">
                            <a asp-page="./Edit" asp-route-id="@service.Id" class="btn btn-warning btn-sm me-1">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <form method="post"
                                  asp-page="/ServicePage"
                                  asp-page-handler="Delete"
                                  class="d-inline">
                                <input type="hidden" name="id" value="@service.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                    }
                </tbody>
                <tfoot class="table-light">
                    <tr>
                        <td colspan="7" class="text-end" style="font-weight: 400 !important; text-align: right !important;">
                            <strong>@Model.Services.Count()</strong> registro(s) encontrado(s)
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</section>
