@page
@model FuerzaG.Pages.Accounts.CreateModel
<h2>Nueva Cuenta</h2>

@if (Model.ValidationErrors.Any())
{
    <div class="alert alert-danger" role="alert">
        <h5 class="alert-heading">Errores de validación:</h5>
        <ul class="mb-0">
            @foreach (var error in Model.ValidationErrors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

<form method="post" class="card card-body">

    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Account.Name" class="form-label"></label>
            <input asp-for="Account.Name" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Account.FirstLastName" class="form-label"></label>
            <input asp-for="Account.FirstLastName" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Account.SecondLastName" class="form-label"></label>
            <input asp-for="Account.SecondLastName" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Account.PhoneNumber" class="form-label"></label>
            <input asp-for="Account.PhoneNumber" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Account.Email" class="form-label"></label>
            <input asp-for="Account.Email" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Account.DocumentNumber" class="form-label">Número de documento</label>
            <input asp-for="Account.DocumentNumber" class="form-control" maxlength="14" />
        </div>
        <div class="col-md-6">
            <label asp-for="Account.Role" class="form-label"></label>
            <select asp-for="Account.Role" class="form-select">
                <option value="">Seleccione un rol</option>
                <option value="Administrador">Administrador</option>
                <option value="Propietario">Propietario</option>
            </select>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Guardar</button>
        <a asp-page="/Accounts/AccountPage" class="btn btn-outline-secondary">Cancelar</a>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.GeneratedUserName))
{
    <div class="alert alert-success mt-3">
        Cuenta creada correctamente. Usuario: <strong>@Model.GeneratedUserName</strong>
        <br />
        La contraseña se ha enviado por correo (simulado).
    </div>
}
