@model FuerzaG.Domain.Entities.UserAccount

<div class="row g-3">
    <div class="col-md-6">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="FirstLastName" class="form-label"></label>
        <input asp-for="FirstLastName" class="form-control" />
        <span asp-validation-for="FirstLastName" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="SecondLastName" class="form-label"></label>
        <input asp-for="SecondLastName" class="form-control" />
        <span asp-validation-for="SecondLastName" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="DocumentNumber" class="form-label">N�mero de documento</label>
        <input asp-for="DocumentNumber" class="form-control" maxlength="14" />
        <span asp-validation-for="DocumentNumber" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Role" class="form-label"></label>
        <select asp-for="Role" class="form-select">
            <option value="">Seleccione un rol</option>
            <option value="Administrador">Administrador</option>
            <option value="Propietario">Propietario</option>
            <!-- Agregar m�s roles seg�n la aplicaci�n -->
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
</div>

<!-- Informaci�n del UserName generado (readonly o solo visualizaci�n opcional) -->
@if (!string.IsNullOrEmpty(Model.UserName))
{
    <div class="col-12 mt-3">
        <label class="form-label">Nombre de usuario generado</label>
        <input class="form-control" value="@Model.UserName" readonly />
    </div>
}
